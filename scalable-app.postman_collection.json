{
  "info": {
    "name": "Scalable App API",
    "_postman_id": "12345-abcde-67890-fghij",
    "description": "Postman collection for Scalable App: Auth + Tasks CRUD",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Hitendra\",\n    \"email\": \"hit@gmail.com\",\n    \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/auth/signup",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["auth", "signup"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"hit@gmail.com\",\n    \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Profile",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "http://localhost:5000/profile/me",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["profile", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Get All Tasks",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "http://localhost:5000/tasks",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["tasks"]
            }
          }
        },
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"Watch TV\",\n    \"description\": \"Evening TV time\",\n    \"status\": \"todo\",\n    \"tags\": [\"fun\", \"relax\"]\n}"
            },
            "url": {
              "raw": "http://localhost:5000/tasks",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["tasks"]
            }
          }
        },
        {
          "name": "Update Task",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"Watch TV - updated\",\n    \"status\": \"in-progress\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/tasks/{{taskId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["tasks", "{{taskId}}"]
            }
          }
        },
        {
          "name": "Delete Task",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "http://localhost:5000/tasks/{{taskId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["tasks", "{{taskId}}"]
            }
          }
        }
      ]
    }
  ]
}
